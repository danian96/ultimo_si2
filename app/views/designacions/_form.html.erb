<%= form_with(model: designacion, local: true, html: {class: "form-horizontal"}) do |form| %>
  <% if designacion.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(designacion.errors.count, "error") %> prohibited this designacion from being saved:</h2>

      <ul>
      <% designacion.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-md-6">
    <div class="form-group row">
      <%= form.label :name , class:"control-label text-right col-md-3" %>
      <div class="col-md-9">
        <%= form.text_field :name ,class:"form-control",placeholder:"Nombre" %>
      </div>
    </div>
  </div>


  <div class="col-md-6">
    <div class="form-group row">
      <%= form.label :user_id , class:"control-label text-right col-md-3" %>
      <div class="col-md-9">
        <%= form.collection_select(:user_id, User.all, :id, :email, {hide_label: true},class: "form-control custom-select") %>
      </div>
    </div>
  </div>


  <div class="col-md-6">
    <div class="form-group row">
      <%= form.label :departamento_id , class:"control-label text-right col-md-3" %>
      <div class="col-md-9">
        <%= form.collection_select(:departamento_id, Departamento.all, :id, :name, {hide_label: true},class: "form-control custom-select") %>
      </div>
    </div>
  </div>

<div class="form-actions">
  <div class="row">
    <div class="col-md-6">
      <div class="row">
        <div class="col-md-offset-3 col-md-9">
          <%= form.submit "Guardar", class:"btn btn-info" %>
          <%= link_to 'Atras',departamentos_path , class:"btn btn-info"%>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>
