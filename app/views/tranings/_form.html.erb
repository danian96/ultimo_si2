<%= form_with(model: traning, local: true, html: {class: "form-horizontal"}) do |form| %>
  <% if traning.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(traning.errors.count, "error") %> prohibited this traning from being saved:</h2>

      <ul>
      <% traning.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-md-6">
    <div class="form-group row">
      <%= form.label :título , class:"control-label text-right col-md-3" %>
      <div class="col-md-9">
        <%= form.text_field :title ,class:"form-control",placeholder:"Nombre" %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group row">
      <%= form.label :descripción , class:"control-label text-right col-md-3" %>
      <div class="col-md-9">
        <%= form.text_field :description ,class:"form-control",placeholder:"Nombre" %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group row">
      <%= form.label :fecha_inicio , class:"control-label text-right col-md-3" %>
      <div class="col-md-9">
        <%= form.date_select(:init_date,class: "form-control custom-select") %>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="form-group row">
      <%= form.label :fecha_final , class:"control-label text-right col-md-3" %>
      <div class="col-md-9">
        <%= form.date_select(:end_date,class: "form-control custom-select") %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <div class="row">
      <div class="col-md-6">
        <div class="row">
          <div class="col-md-offset-3 col-md-9">
            <%= form.submit "Guardar", class:"btn btn-info" %>
            <%= link_to 'Atras',tranings_path , class:"btn btn-info"%>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
