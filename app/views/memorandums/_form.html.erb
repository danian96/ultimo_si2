<%= form_with(model: memorandum, local: true, html: {class: "form-horizontal"}) do |form| %>
  <% if memorandum.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(memorandum.errors.count, "error") %> prohibited this memorandum from being saved:</h2>

      <ul>
      <% memorandum.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-md-6">
    <div class="form-group row">
      <%= form.label :title , class:"control-label text-right col-md-3" %>
      <div class="col-md-9">
        <%= form.text_field :title ,class:"form-control",placeholder:"Nombre" %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group row">
      <%= form.label :description , class:"control-label text-right col-md-3" %>
      <div class="col-md-9">
        <%= form.text_field :description ,class:"form-control",placeholder:"Nombre" %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group row">
      <%= form.label :memorandum_type_id , class:"control-label text-right col-md-3" %>
      <div class="col-md-9">
        <%= form.collection_select(:memorandum_type_id, MemorandumType.all, :id, :name, {hide_label: true},class: "form-control custom-select") %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group row">
      <%= form.label :user_id , class:"control-label text-right col-md-3" %>
      <div class="col-md-9">
        <%= form.collection_select(:user_id, User.all, :id, :email, {hide_label: true},class: "form-control custom-select") %>
      </div>
    </div>
  </div>


  <div class="form-actions">
    <div class="row">
      <div class="col-md-6">
        <div class="row">
          <div class="col-md-offset-3 col-md-9">
            <%= form.submit "Guardar", class:"btn btn-info" %>
            <%= link_to 'Atras',memorandums_path , class:"btn btn-info"%>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
