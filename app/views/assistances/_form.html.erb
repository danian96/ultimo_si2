<%= form_with(model: assistance, local: true, html: {class: "form-horizontal"}) do |form| %>
  <% if assistance.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(assistances.errors.count, "error") %> prohibited this assistances from being saved:</h2>
      <ul>
      <% assistance.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-md-6">
    <div class="form-group row">
      <%= form.label :day ,"Dia :" , class:"control-label text-right col-md-3" %>
      <div class="col-md-9">
        <%= form.text_field :day ,class:"form-control",placeholder:"Nombre" %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group row">
      <%= form.label :date_of_assistance, "Fecha de Asistencia :" , class:"control-label text-right col-md-3" %>
      <div class="col-md-9">
        <%= form.date_select :date_of_assistance %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group row">
      <%= form.label :init_time ,"Hora de llegada :", class:"control-label text-right col-md-3" %>
      <div class="col-md-9">
        <%= form.time_select :init_time %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group row">
      <%= form.label :finish_time ,"Hora de Salida :", class:"control-label text-right col-md-3" %>
      <div class="col-md-9">
        <%= form.time_select :finish_time %>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group row">
      <%= form.label :people_id,"Persona :" , class:"control-label text-right col-md-3" %>
      <div class="col-md-9">
        <%= form.collection_select(:people_id, Person.all, :id, :name, {hide_label: true},class: "form-control custom-select") %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <div class="row">
      <div class="col-md-6">
        <div class="row">
          <div class="col-md-offset-3 col-md-9">
            <%= form.submit "Guardar", class:"btn btn-info" %>
            <%= link_to 'Atras',assistances_path , class:"btn btn-info"%>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
