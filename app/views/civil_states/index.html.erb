<p id="notice"><%= notice %></p>

<h1>Civil States</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @civil_states.each do |civil_state| %>
      <tr>
        <td><%= civil_state.name %></td>
        <td><%= link_to 'Show', civil_state %></td>
        <td><%= link_to 'Edit', edit_civil_state_path(civil_state) %></td>
        <td><%= link_to 'Destroy', civil_state, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

