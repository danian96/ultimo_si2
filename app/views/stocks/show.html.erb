
<div class="card card-outline-info">
  <div class="card-header">
    <h4 class="m-b-0 text-white">memorandum</h4>
  </div>
  <div class="card-body">
    <div class="form-body">
      <h3 class="box-title">Datos</h3>
      <hr class="m-t-0 m-b-40">
      <p>
        <strong>Nombre de Iten:</strong>
        <%= @stock.item_name %>
      </p>

      <p>
        <strong>Cantidad:</strong>
        <%= @stock.quantity %>
      </p>

      <p>
        <strong>Fecha de Compra:</strong>
        <%= @stock.buying_date %>
      </p>

      <p>
        <strong>Stock categoria:</strong>
        <%= @stock.stock_category.name %>
      </p>

      <p>
        <%= link_to 'Editar', edit_stock_path(@stock), class:"btn btn-info"  %>
        <%= link_to 'Atras', stocks_path, class:"btn btn-info"  %>
      </p>
    </div>
  </div>
</div>
